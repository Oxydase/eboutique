{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur notre boutique{% endblock %}

{% block body %}
<div class="ui container" style="margin-top: 2em;">
    <h1 class="ui header">Bienvenue sur notre boutique</h1>

    <div class="ui three stackable cards">
        {% for product in products %}
            <div class="ui medium card">
                <div class="image centered">
                    {% if product.media is defined and product.media is not empty %}
                        <img class="ui medium image" src="{{ asset(product.media[0].path) }}" alt="{{ product.name }}">
                    {% else %}
                        <img class="ui medium image" src="{{ asset('images/default.jpg') }}" alt="Image par défaut">
                    {% endif %}
                </div>
                <div class="content">
                    <div class="header">{{ product.name }}</div>
                    <div class="description">
                        {{ product.description|slice(0, 100) ~ '...' }}
                    </div>
                </div>
                <div class="extra content">
                    <strong>{{ product.priceHT }} €</strong>
                    <a href="{{ path('cart_add', {id: product.id}) }}" class="ui button right floated">
                        Ajouter au panier
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
