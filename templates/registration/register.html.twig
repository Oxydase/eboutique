{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #1f1f1f;
            color: white;
        }
        .ui.form label {
            color: white !important;
        }
        .ui.header {
            color: white !important;
        }
        .ui.black.button {
            background-color: black !important;
            color: white !important;
        }
        .ui.black.button:hover {
            background-color: #333 !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="ui container" style="margin-top: 2em; max-width: 500px;">
    <h2 class="ui header">Cr√©er un compte</h2>

    {{ form_start(registrationForm, {'attr': {'class': 'ui form'}}) }}
        {{ form_errors(registrationForm) }}

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="ui black button fluid">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
