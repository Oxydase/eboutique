<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
            <style>
        body {
            background-color: #1f1f1f !important;
            color: #fff;
        }
        h1{
            color:white;
        }
        *{
            color: white;
        }
        h1.ui.header {
            color: white;
            font-size: 2rem;
        }
        input{
            color: black;
        }


        .ui.card {
            background-color: #2a2a2a;
            color: white;
        }
        .ui.card .image img {
            width: 150px !important;
            height: 200px;
            object-fit: cover;
            border-bottom: 1px solid #444;
        }
        .ui.button {
            background-color: white;
            color: black;
        }
        .ui.button:hover {
            background-color: #ccc;
            color: black;
        }
        .ui.header {
            color: white;
        }
    </style>
            <!-- Semantic UI CSS -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.css">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="ui menu">
                <div class="header item">
                    <i class="shopping bag icon"></i> Ma e-Boutique
                </div>

                <a href="{{ path('app_home') }}" class="item">Accueil</a>
                <a href="{{ path('category_index') }}" class="item">Catégories</a>

                <div class="right menu">
                    {% if app.user %}
                        <a href="{{ path('cart_index') }}" class="item">
                            <i class="shopping cart icon"></i>
                            Panier
                            {% set totalItems = cart_total_quantity() %}
                            {% if totalItems > 0 %}
                                <div class="ui red circular label">{{ totalItems }}</div>
                            {% endif %}
                        </a>

                        <div class="item">
                            <i class="user icon"></i> {{ app.user.email }}
                        </div>
                        <a href="{{ path('app_logout') }}" class="item">
                            <i class="sign out alternate icon"></i> Déconnexion
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="item">
                            <i class="sign in alternate icon"></i> Connexion
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
